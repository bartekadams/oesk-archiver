%h1.text-center.epic-title
  Współczynnik kompresji do rozmiaru pliku
%div{ id: "chart_ratio_to_original_size_pdf", style: "width:100%;height:550px;margin:auto" }
%div{ id: "chart_ratio_to_original_size_doc", style: "width:100%;height:550px;margin:auto" }
%div{ id: "chart_ratio_to_original_size_other", style: "width:100%;height:550px;margin:auto" }
= javascript_include_tag "charts"
:javascript
  draw_ratio_to_original_size(#{raw @data[:pdf].to_json}, "chart_ratio_to_original_size_pdf", "pliki PDF");
  draw_ratio_to_original_size(#{raw @data[:doc].to_json}, "chart_ratio_to_original_size_doc", "pliki DOC");
  draw_ratio_to_original_size(#{raw @data[:other].to_json}, "chart_ratio_to_original_size_other", "pozostałe pliki");
  document.getElementById('sidebar_ratio_to_size').className += " active";
